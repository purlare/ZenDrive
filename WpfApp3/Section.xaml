<Page x:Class="WpfApp3.Properties.Section"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Section">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="Pictures/Логотип.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" Height="49" Width="199"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Margin="281,8,0,0" Width="318">
            <TextBlock Text="Каталог" Margin="10"/>
            <TextBlock Text="Гарантии и сервис" Margin="10" MouseLeftButtonUp="Guarantees_Click" Cursor="Hand"/>
            <TextBlock Text="Статьи" Margin="10" MouseLeftButtonUp="Articles_Click" Cursor="Hand"/>
            <TextBlock Text="Контакты" Margin="10" MouseLeftButtonUp="Contacts_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
